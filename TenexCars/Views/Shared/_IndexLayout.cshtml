<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tenexcars</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .half-height {
            height: 50vh; /* 50% of viewport height */
        }

        .btn-custom {
            background-color: red !important;
            color: white !important;
            border-color: red !important; /* Ensuring the outline matches */
        }

            .btn-custom:hover {
                background-color: white !important;
                color: red !important;
            }

        .navbar-brand img {
            height: 60px; /* Adjust the height as needed */
            width: 150%; /* Maintain aspect ratio */
            margin-right: 10px;
        }

        .nav-link-red {
            color: red !important;
        }

       
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm shadow border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Assets/logo2.png" alt="Tenexcars Logo" style="height:80px; width:auto; background-color: white;" /> <!-- Adjust the image path as needed -->
                </a>
                <button class="navbar-toggler p-0"style="font-size:20px;" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" style="color:red;  margin-left: 800px;" asp-controller="Operator" asp-action="Home">Fleet</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:red;  margin-right: ;" asp-controller="Operator" asp-action="Home">Book Now</a>
                        </li>
                        @* <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li> *@
                    </ul>
                    <a class="btn btn-custom btn-lg" asp-area="" asp-controller="Account" asp-action="Login">SIGN IN</a>
                </div>
            </div>
        </nav>

        <div class="position-relative half-height vw-100 overflow-hidden mb-4">
            <img src="~/Assets/img-2-3x-img-2-3x.png" class="position-absolute w-100 h-100" alt="Winding road through green scenery" style="object-fit: cover; top: 0; left: 0;">
            <div class="position-absolute w-100 h-100 d-flex flex-column justify-content-center align-items-center" style="background-color: rgba(0,0,0,0.4);">
                <h1 class="text-white mb-4">Welcome to Tenex Cars</h1>

                <a class="nav-link" asp-area="" asp-controller="Operator" asp-action="Home">
                    <button class="btn btn-custom btn-lg">Reserve Now</button>
                </a>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Tenexcars - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
