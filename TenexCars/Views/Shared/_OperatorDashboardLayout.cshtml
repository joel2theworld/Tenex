<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TenexCars</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TenexCars.styles.css" asp-append-version="true" />

    <!-- Include Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.4/components/charts/chart-1/assets/css/chart-1.css">
</head>
<body class="mb-3" style="overflow-x: hidden;">
    <style>
        .sidebar {
            width: 100%;
            height: 100%;
            background-color: #fff;
            padding-right: 0px;
            margin-top: auto;
            margin-right: 0px 0px;
            padding-left: 20px;
        }

            .sidebar a {
                padding: 10px;
                display: block;
                color: black;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #f5f5f5;
                }

        .main-content {
            margin-right: 0px 0px;
        }
    </style>
    <div class="">
        <div class="row p-0">
            <div class="col-3 p-0">
                <div class="sidebar card shadow" style="border:solid 1px white; border-radius:8px;">
                    <h1><img src="~/Assets/logo2.png" class="logo" alt="Profile" style="width:50%;"></h1>
                    <hr>
                   
                    <hr>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Subscription" asp-action="OperatorSubscription" >
                        <i class="fas fa-credit-card"></i> Subscriptions
                    </a>
                    <hr>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Subscription" asp-action="Subscribers">
                        <i class="fas fa-money-check-alt"></i> Subscribers
                    </a>
                    <hr>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Operator" asp-action="OperatorInventoryPage">
                        <i class="fas fa-car"></i> Vehicles
                    </a>
                    <hr>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Operator" asp-action="CreateVehicle">
                        <i class="fas fa-car"></i> Create Vehicle
                    </a>
                    <hr>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Operator" asp-action="ManageOperatorMembers">
                        <i class="fas fa-car"></i> Manage Operator Members
                    </a>
                    <hr>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Operator" asp-action="OperatorProfileSettings">
                        <i class="fas fa-cog"></i> Settings
                    </a>
                    <hr>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                    <hr>
                </div>
            </div>
            <div class="col-9 p-0">
                <header>
                    <nav class="navbar navbar-expand-sm p-0 mt-1 shadow" style="background-color: #fff; border:solid 1px white; border-radius:8px;">
                        <div class="container-fluid">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="" aria-controls="" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="">
                                <form class="d-flex ms-auto w-100 bg-white">
                                    <div class="input-group">
                                        <span class="input-group-text bg-white" style="border:solid 1px white; border-radius:8px;"><i class="fas fa-search"></i></span>
                                        <input class="form-control" style="border:solid 1px white; border-radius:8px;" type="search" placeholder="Search Something" aria-label="Search">
                                        <button class="bg-white" style="border:none;" type="submit">Search</button>
                                    </div>
                                    <ul class="navbar-nav ms-3">
                                        <li class="nav-item">
                                            <a class="nav-link bg-white mt-2" asp-area="" asp-controller="Operator" asp-action="Home">Home</a>
                                        </li>
                                        <li class="nav-item ">
                                            <a class="nav-link" style="font-size:20px;" href="#"><i class="fa fa-bell"></i></a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#"><img src="~/Assets/me-about.jpg" class="rounded-circle" alt="Profile" style="width:40px;"></a>
                                            @* <img src="@Model.UserProfile?.ProfileImagePath" class="rounded-circle" alt="Profile" style="width:40px;"> *@
                                        </li>
                                    </ul>
                                </form>
                            </div>
                        </div>
                    </nav>
                </header>
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://unpkg.com/bs-brain@2.0.4/components/charts/chart-6/assets/controller/chart-6.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
