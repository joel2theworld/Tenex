@{
    ViewData["Title"] = "Post Reservation";
}

<div class="container">
    <div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
        <div class="card shadow-sm" style="width: 30rem; border-radius: 10px;">
            <div class="card-body text-center">
                <img src="~/Assets/logo2.png" alt="Tenex Logo" class="img-fluid mb-4" style="max-width: 150px;" />
                <h5 class="card-title">Reservation Successful</h5>
                <p class="card-text lead mt-3 mb-4">
                    Thank you for reserving a car with us. Your profile is currently being reviewed, and you will get a response in the next 24 hours.
                </p>
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Return to Home</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Add any additional scripts here if needed -->
}
