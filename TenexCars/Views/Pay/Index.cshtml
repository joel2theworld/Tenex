@model TenexCars.Models.ViewModels.PayViewModel

@{
    ViewData["Title"] = "Payment Home";
    var error = ViewData["error"] as string;
}

<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="card" style="width: 24rem;">
        <div class="card-body">
            <h3 class="card-title text-center">Pay</h3>
            @if (!string.IsNullOrEmpty(error))
            {
                <div class="alert alert-danger">@error</div>
            }
            <form method="post" asp-controller="Pay" asp-action="Index">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" asp-for="Name" name="name" id="name" required />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" asp-for="Email" name="email" id="email" required />
                </div>
                <div class="form-group">
                    <label for="amount" class="col-form-label">Amount</label>
                    <p class="form-control">@Model.Amount</p> <!-- Display the amount here -->
                    <input type="hidden" asp-for="Amount" /> <!-- Include the hidden field for Amount -->
                </div>
                <input type="hidden" asp-for="VehicleId" />
                <input type="hidden" asp-for="SubscriberId" />
                <input type="hidden" asp-for="OperatorId" />
                <button type="submit" class="btn btn-primary btn-block">Pay</button>
            </form>
        </div>
    </div>
</div>
