<style>
    .car-image {
        width: 100%; /* Ensures the image takes up the full width of the column */
    }

    .card-image {
        margin-bottom: 20px; /* Adds space between the image and the paragraph */
    }

    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Navbar Styles */
    .mfn__top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #333;
        color: white;
        padding: 10px 20px;
    }

    .mfn__logoholder {
        display: flex;
        align-items: center;
    }

    .mfn__logolink {
        display: flex;
        align-items: center;
        color: white;
        text-decoration: none;
    }

    .mfn__logo--desktop {
        height: 35px;
        width: 168px;
    }

    .mfn__topright {
        display: flex;
        align-items: center;
    }

    .header-nav-item {
        display: flex;
    }

    .utility-nav {
        list-style: none;
        display: flex;
        margin: 0;
        padding: 0;
    }

        .utility-nav li {
            margin-right: 20px;
        }

    .utility-nav__header-link a {
        color: white;
        text-decoration: none;
        font-size: 14px;
    }

    .sign-in {
        margin-left: 20px;
        font-size: medium;
    }

    .cta-container button {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
    }

    .mfn__hamburger {
        background: none;
        border: none;
        color: white;
        cursor: pointer;
        display: none; /* Only show on mobile */
    }

    .mfn__hamburger-icon,
    .mfn__close-icon {
        font-size: 24px;
    }

    .modal-backdrop {
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        border-radius: 0.5rem;
    }

    /* Footer link color */
    .footer a {
        font-size: 10px;
        color: black;
        /* text-decoration:none; */
    }

    p {
        font-size: small;
    }

    /* Custom card height */
    .custom-card {
        min-height: 400px; /* Increase the card height as needed */
    }

    #fleetCarousel {
        width: 100%;
    }

        #fleetCarousel .carousel-item {
            height: auto;
        }

        #fleetCarousel .car-image {
            max-height: 150px;
            width: auto;
            margin: 0 auto;
        }

        #fleetCarousel p {
            margin-top: 10px;
        }

    /* Responsive styles for smaller screens */
    @@media (max-width: 767px) {
        #fleetCarousel .row {
            flex-wrap: nowrap;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        #fleetCarousel .col-md-3 {
            flex: 0 0 auto;
            width: 50%;
        }
    }

    /* Responsive styles */
    @@media (max-width: 768px) {
        .mfn__hamburger {
            display: block;
        }

        .mfn__topright,
        .utility-nav {
            display: none;
        }

        .mfn__top[aria-expanded="true"] .mfn__topright,
        .mfn__top[aria-expanded="true"] .utility-nav {
            display: flex;
            flex-direction: column;
        }
    }
</style>

